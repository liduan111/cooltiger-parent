<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kyj.cooltiger.cooltigeroauth.dao.CollectDao">

    <resultMap type="com.kyj.cooltiger.cooltigeroauth.entity.CollectVo" id="adMap">
        <result property="Id" column="id"/>
        <result property="userCode" column="user_code"/>
        <result property="codeId" column="code_id"/>
        <result property="codeType" column="code_type"/>
        <result property="deleted" column="deleted"/>
        <result property="collectTime" column="collect_time"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="modified_time"/>
        <result property="codeName" column="store_name"/>
        <result property="codeLogourl" column="logo_url"/>
    </resultMap>

    <select id="collectlist" resultType="com.kyj.cooltiger.cooltigeroauth.entity.CollectVo">
        select a.id as Id,
               b.store_name as codeName,
               b.logo_url as codeLogourl
        from ky_user_collect a
        LEFT JOIN ky_store_info b
        on a.code_id=b.store_id
        where 1=1
        and a.code_type=1
        and a.deleted=0
        <if test="userCode != null and userCode!=0">
            and a.user_code=#{userCode}
        </if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by a.id asc
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <insert id="addcollect" parameterType="com.kyj.cooltiger.cooltigeroauth.entity.CollectVo">
        insert into ky_user_collect(
            `user_code`,
            `code_id`,
            `code_type`,
            `deleted`,
            `collect_time`,
            `create_time`)
        values(
                  #{userCode},
                  #{codeId},
                  #{codeType},
                  #{deleted},
                  #{collectTime},
                  #{createTime})
    </insert>
    <select id="querycollect" resultMap="adMap">
        select
            a.id,
            a.code_id,
            a.code_type,
            a.collect_time,
            a.create_time,
            a.user_code,
            a.modified_time,
            a.deleted
        from ky_user_collect a where 1=1
        and a.code_type=1
        and a.deleted=0
        <if test="userCode != null and userCode!=0">
            and a.user_code=#{userCode}
        </if>
        <if test="codeId != null and codeId!=0">
            and a.code_id=#{codeId}
        </if>
    </select>
    <update id="collectremove" parameterType="com.kyj.cooltiger.cooltigeroauth.entity.CollectVo">
        update ky_user_collect
         set deleted  = #{collectVo.deleted},
             collect_time  = #{collectVo.collectTime},
             modified_time = #{collectVo.updateTime}
        where user_code = #{collectVo.userCode}
          and code_id=#{collectVo.codeId}
          and code_type=1
    </update>
</mapper>